<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="log-path">logs/</Property>
	</Properties>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
		<RollingFile name="logFile" fileName="${log-path}/xmlparser.log"
			filePattern="${log-path}/xmlparser-%d{yyyy-MM-dd}-%i.log" append="true">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %C{2} (%F:%L) - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="1024 KB" />
			</Policies>
			<DefaultRolloverStrategy max="25" />
		</RollingFile>
		<Async name="ASYNC">
			<AppenderRef ref="console" />
			<AppenderRef ref="logFile" />
		</Async>
	</Appenders>
	<Loggers>
		<Root level="all">
			<AppenderRef ref="logFile" />
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
</Configuration>